BoxLayout:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    BoxLayout:
        orientation: 'horizontal'
        spacing: 10

        TextInput:
            id: input_miles
            text: '0'
            multiline: False
            input_filter: 'float'
            on_text: app.handle_convert()

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: 0.3
            spacing: 5

            Button:
                text: 'Up'
                on_press: app.handle_increment(1)

            Button:
                text: 'Down'
                on_press: app.handle_increment(-1)

    # Button:
    #     text: 'Convert'
    #     on_press: app.handle_convert()

    Label:
        text: f"{app.output_km} km"
        color: (1, 1, 0, 1)
